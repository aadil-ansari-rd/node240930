<%- include('./base/header.ejs') %>
<div class="container">
    <div class="alert bg-warning my-3">
        <h4 class="text-center">Register Yourself</h4>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col" ></div>
        <div class="col" style="border: 1px solid gray; padding: 25px;">
            <form action="/signup" method="post" enctype="multipart/form-data"> 
                
                <div>
                    <label class="form-label">First Name</label>
                    <input type="text" name="firstName" class="form-control" id="">
                </div>
                <div>
                    <label class="form-label">Last Name</label>
                    <input type="tex" name="lastName" class="form-control" id="">
                </div>
                <div>
                    <label class="form-label">Email</label>
                    <input type="text" name="email" class="form-control" id="">
                </div>
                <div>
                    <label class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" id="">
                </div>
                <div>
                    <label class="form-label">Mobile No</label>
                    <input type="text" name="mobileNo" class="form-control" id="">
                </div>
                <div>
                    <label class="form-label">Select Your Image</label>
                    <input type="file" name="profileImage" class="form-control" id="" multiple>
                </div>
                <input type="submit"  class="btn btn-danger w-100 my-3 "  value="Sign Up" id="">
                <!-- <div>
                    <a href="/signup/window" class="btn btn-success w-100 my-3">Sign Up</a>
                </div> -->
            </form>
        </div>
        <div class="col"></div>
    </div>
</div>
